# Stage 1: Build with Maven
FROM maven:3.9.6-eclipse-temurin-17 AS build
WORKDIR /app

# Copy pom and src
COPY pom.xml .
COPY src ./src

# Build project
RUN mvn clean package -DskipTests

# Stage 2: Runtime with JRE
FROM eclipse-temurin:17-jre
WORKDIR /app

# Copy the JAR
COPY --from=build /app/target/*.jar ./LearningHub.jar

# Expose Spring Boot port
EXPOSE 8080

# Run the JAR
CMD ["java", "-jar", "LearningHub.jar"]
